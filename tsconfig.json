{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es2020",
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "~/components/*": ["./components/*"],
      "~/package.json": ["./package.json"],
      "~/styles/*": ["./styles/*"],
      "~/assets/*": ["./assets/*"],
      "~/stores/*": ["./stores/*"],
      "~/api": ["./api/index.ts"],
      "~/icons/*": ["./icons/*"],
      "~/utils/*": ["./utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.svelte"],
  "exclude": ["node_modules"]
}
